@page
@model JSJMExoticCarsWebApp.Models.Car
@{
    ViewData["Title"] = "Car Details";
}

<link rel="stylesheet" href="css/style.css" asp-append-version="true" />
<link rel="stylesheet" href="css/addCar.css"/>

<div style="text-align: center";>
    <h1>Car Details</h1>
        <form method="get">
            <label asp-for="@Model.carModel">Car Model:</label>
            <input type="text" id="carModel" name="carModel"><br>
            <label asp-for="@Model.carBrand">Car Brand:</label>
            <input type="text" id="carBrand" name="carBrand"><br>
            <label asp-for="@Model.yearModel">Year Model:</label>
            <input type="number" id="yearModel" name="yearModel"><br>
            <label asp-for="@Model.description">Description:</label>
            <input type="text" id="description" name="description"><br>
            <label asp-for="@Model.mileage">Mileage:</label>
            <input type="number" id="mileage" name="mileage"><br>
            <label asp-for="@Model.price">Price:</label>
            <input type="number" id="price" name="price"><br>
            <button type="submit">Update Car</button>
            <button type="submit" formaction="/Delete">Delete Car</button>
        </form>

</div>