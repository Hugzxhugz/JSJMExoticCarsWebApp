@page
@model JSJMExoticCarsWebApp.Models.Car
@{
    ViewData["Title"] = "Car Details";
}

<link rel="stylesheet" href="css/style.css" asp-append-version="true" />
<link rel="stylesheet" href="css/addCar.css"/>

<div style="text-align: center";>
    <h1>Car Details</h1>
        <form method="get">
            <label asp-for="@Model.Model">Car Model:</label>
            <input type="text" id="Model" name="carModel"><br>
            <label asp-for="@Model.Brand">Car Brand:</label>
            <input type="text" id="Brand" name="carBrand"><br>
        <label asp-for="@Model.ModelYear">Year Model:</label>
        <input type="number" id="ModelYear" name="yearModel"><br>
            <label asp-for="@Model.Description">Description:</label>
            <input type="text" id="Description" name="description"><br>
            <label asp-for="@Model.Mileage">Mileage:</label>
            <input type="number" id="Mileage" name="mileage"><br>
            <button type="submit">Update Car</button>
            <button type="submit" formaction="/Delete">Delete Car</button>
        </form>

</div>