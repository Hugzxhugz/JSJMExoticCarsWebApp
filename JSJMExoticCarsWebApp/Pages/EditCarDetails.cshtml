@page
@using JSJMExoticCarsWebApp.Models.Enums
@model EditCarDetailsModel

@{
    ViewData["Title"] = "Edit Car Details";
}

<link rel="stylesheet" href="css/style.css" asp-append-version="true" />
<link rel="stylesheet" href="css/addCar.css"/>

<div style="text-align: center">
    <h1>Edit Car Details</h1>
        <form method="post">
            <label>Car Model:</label>
            <input asp-for="@Model.car.CarModel" type="text" id="CarModel" name="CarModel"><br>
            <label>Car Brand:</label>
            <input asp-for="@Model.car.CarBrand" type="text" id="CarBrand" name="CarBrand"><br>
            <label>Year Model:</label>
            <input asp-for="@Model.car.YearModel" type="number" id="YearModel" name="YearModel"><br>
            <label>Description:</label>
            <input asp-for ="@Model.car.Description" type="text" id="Description" name="Description"><br>
            <label>Mileage:</label>
            <input asp-for="@Model.car.Mileage" type="number" id="Mileage" name="Mileage"><br>
            <label asp-for="@Model.car.Transmission">Transmission Type:</label>
            <select class="selectEnums" asp-for="@Model.car.Transmission">
            @foreach (var value in Enum.GetValues(typeof(TransmissionType)))
            {
                <option value="@((int)value)">@value</option>
            }
            </select><br>
            
            <label asp-for="@Model.car.Fuel">Fuel Type:</label>
            <select class="selectEnums" asp-for="@Model.car.Fuel">
                @foreach (var value in Enum.GetValues(typeof(FuelType)))
                {
                    <option value="@((int)value)">@value</option>
                }
            </select><br>
            <label>Price:</label>
            <input asp-for="@Model.car.Price" type="number" id="Price" name="Price"><br>
            
            <button type="submit" name="submitAction" value="update">Update Car</button>
            <button type="submit" name="submitAction" value="delete">Delete Car</button>
        </form>

</div>