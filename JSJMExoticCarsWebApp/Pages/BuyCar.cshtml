@page
@model JSJMExoticCarsWebApp.Pages.BuyCarModel
@{
	ViewData["Tittle"] = "BuyCar";
}

<link rel="stylesheet" href="css/style.css" asp-append-version="true" />
<link rel="stylesheet" href="css/carstyle.css" />


<div style="text-align: center" ;>
    <h1>Car Details</h1>
    <form method="post">
        <div class="car-details">
            <label>Car Model:</label>
            <div>@Model.Car.CarModel</div><br />
            <label>Car Brand:</label>
            <div>@Model.Car.CarBrand</div><br />
            <label>Year Model:</label>
            <div>@Model.Car.YearModel</div><br />
            <label>Description:</label>
            <div>@Model.Car.Description</div><br />
            <label>Mileage:</label>
            <div>@Model.Car.Mileage</div><br />
            <label>Transmission Type:</label>
            <div>@Model.Car.Transmission</div><br />
            <label>Fuel Type:</label>
            <div>@Model.Car.Fuel</div><br />
            <label>Price:</label>
            <div>@Model.Car.Price</div><br />
        </div>
        <br />
        <button type="submit" >Buy Car</button>
    </form>
</div>
