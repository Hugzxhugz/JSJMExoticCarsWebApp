@page
@model MarketModel
@{
    ViewData["Title"] = "Market Place";
}

<link rel="stylesheet" href="css/style.css" asp-append-version="true" />
<link rel="stylesheet" href="css/carInfo.css" />

<<div class="car-info">
    @foreach (Models.Car car in Model.cars)
    {
        <div class="box" onclick="location.href='@Url.Page("/ShowCarDetails", new { id = car.Id })'">
            <h3>@car.CarModel</h3>
            <p>@car.CarBrand</p>
            <p>$@car.Price</p>
        </div>
    }
</div>

<br />

<div class="box" style="text-align: center">
    <button onclick="location.href='@Url.Page("/AddCar")'" class="btn btn-primary">Add Car</button>
</div>


